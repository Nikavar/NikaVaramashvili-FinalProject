@using MovieMVC.Admin.Models.Account
@model List<ManageAccountRolesViewModel>

@{ ViewData["Title"] = "Details";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Account Roles</h2>
            Add/Remove Roles for User : @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
<div class="form-check m-1">
    <input type="hidden" asp-for="@Model[i].Id" />
    <input type="hidden" asp-for="@Model[i].RoleName" />
    <input asp-for="@Model[i].Selected" class="form-check-input" />
    <label class="form-check-label" asp-for="@Model[i].Selected">
        @Model[i].RoleName
    </label>
</div>            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="LstAccounts"
               class="btn btn-primary" style="width:auto">Cancel</a>
            <a asp-action="DeleteAccount" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Delete</a>

        </div>
    </div>
</form>